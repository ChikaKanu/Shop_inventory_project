<h2>Edit <%= @manufacturer.name %></h2>
<form method="POST" action="/manufacturer/<%= @manufacturer.id %>">
  <div>

    <div>
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= @manufacturer.name %>"/>
    </div>

    <div>
      <label for="address">Address:</label>
      <input type="text" name="address" id="address" value="<%= @manufacturer.address%>"/>
    </div>
  </div>
</form>
