<h2>Edit <%= @manufacturer.name %></h2>

<form method="POST" action="/manufacturers/<%= @manufacturer.id %>">
  <div id="product-wrapper" Class="scroll_style" Class="product">
  <div>

    <div>
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= @manufacturer.name %>"/>
    </div>

    <div>
      <label for="address">Address:</label>
      <input type="text" name="address" id="address" value="<%= @manufacturer.address%>"/>
    </div>

    <div>
      <input type="submit" value="Update Manufacturer"/>
    </div>
  </div>
</div>
</form>
